.cu-textarea .tip {
  position: absolute;
  right: 0;
  bottom: 5rpx; }
.cu-textarea .bg {
  position: relative;
  width: 100%;
  border-radius: 12rpx;
  overflow: auto;
  box-sizing: border-box;
  border: 1rpx solid #eee; }
.cu-textarea textarea {
  line-height: 1.2em;
  flex: 1;
  font-size: 28rpx;
  padding: 0;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: top; }
.cu-textarea textarea .placeholder {
    color: transparent; }
.cu-textarea textarea::after {
    content: attr(data-placeholder);
    color: gray;
    position: absolute;
    top: 0;
    left: 0;
    pointer-events: none;
    transition: 0.2s;
    opacity: 1; }
.cu-textarea textarea.value::after {
    opacity: 0; }
.cu-textarea textarea[disabled],
  .cu-textarea textarea[disabled] .placeholder {
    color: transparent; }